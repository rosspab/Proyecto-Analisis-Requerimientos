@* Breadcrumb *@


<button type="button" class="btn btn-outline-primary" onclick="agregarRegistro()">Roles</button>


<table class="table">
    <thead>
        <tr>
            <th scope="col">ID Rol</th>
            <th scope="col">Descripcion</th>
            
        </tr>
    </thead>
    <tbody>

        @*Permite crear las rows de la tabla*@

        @{
            if ((List<Roles>)ViewBag.ListaRoles != null)
            {
                foreach (var i in (List<Roles>)ViewBag.ListaRoles)
                {
                    <tr>
                        <td onclick="irDetalle('@i.rol_id)"> 
                            <a href="#">@i.rol_id</a>
                        </td>
                        <td>@i.description</td>
                        
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3">No hay registros existentes</td>
                </tr>
            }
        }
     </tbody>
</table>

<script>

    // Redirecciona a la pantalla con la informacion del usuario en modo inserción
    var agregarRegistro = function () {
        $(idDivCuerpo).load('@Url.Action("Detalle")');
    }

    // Redirecciona a la pantalla con la informacion del usuario en modo edicion
    var irDetalle = function (ID) {
        $(idDivCuerpo).load('@Url.Action("Detalle")' + '?ID=' + ID);
    }

</script>