@* Breadcrumb *@
<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Usuarios</li>
    </ol>
</nav>

<button type="button" class="btn btn-outline-primary" onclick="agregarRegistro()">Agregar Aerolinea</button>


<table class="table">
    <thead>
        <tr>
            <th scope="col">Codigo Aerolinea</th>
            <th scope="col">Nombre Agencia</th>
            <th scope="col">Ubicacion</th>
        </tr>
    </thead>
    <tbody>

        @*Permite crear las rows de la tabla*@

        @{
            if ((List<Aerolinea>)ViewBag.ListaAerolinea != null)
            {
                foreach (var i in (List<Aerolinea>)ViewBag.ListaAerolinea)
                {
                    <tr>
                        <td onclick="irDetalle('@i.airline_code')"> 
                            <a href="#">@i.airline_code</a>
                        </td>
                        <td>@i.name_agency</td>
                        <td>@i.country_code</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3">No hay registros existentes</td>
                </tr>
            }
        }
     </tbody>
</table>

<script>

    // Redirecciona a la pantalla con la informacion del usuario en modo inserción
    var agregarRegistro = function () {
        $(idDivCuerpo).load('@Url.Action("Detalle")');
    }

    // Redirecciona a la pantalla con la informacion del usuario en modo edicion
    var irDetalle = function (ID) {
        $(idDivCuerpo).load('@Url.Action("Detalle")' + '?ID=' + ID);
    }

</script>